<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red"
    android:orientation="vertical"

    >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="榆林党建"
            android:padding="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_jgzb"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_photo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/tx"
                app:civ_border_width="2dp"
                app:civ_border_color="#11ffffff"/>
            <!--<ImageView-->
                <!--android:id="@+id/iv_photo"-->
                <!--android:layout_width="45dp"-->
                <!--android:layout_height="45dp"-->
                <!--android:background="@drawable/tx"-->
                <!--/>-->

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_zw"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="12sp"

                        />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_marginLeft="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="12sp"

                        />

                    <com.iarcuschin.simpleratingbar.SimpleRatingBar
                        android:id="@+id/start"
                        android:layout_marginLeft="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srb_starSize="13dp"

                        app:srb_starBorderWidth="1"
                        app:srb_borderColor="@color/white"
                        app:srb_fillColor="@color/white"

                        app:srb_isIndicator="true"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_ndjf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年度积分：0分"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:id="@+id/tv_qspm"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全市排名：0分"
                        android:textColor="@color/white"
                        android:textSize="11sp"

                        />

                    <TextView
                        android:id="@+id/tv_zbpm"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支部排名：0分"
                        android:textColor="@color/white"
                        android:textSize="11sp"

                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:id="@+id/ll_cn"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的承诺："
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        />

                    <TextView
                        android:id="@+id/tv_cn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

</LinearLayout>
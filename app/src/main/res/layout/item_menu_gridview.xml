<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:orientation="horizontal">


    <LinearLayout
        android:background="@drawable/sy_btn_background"

        android:id="@+id/ll_xxks"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/xxks"
            android:background="@drawable/sy_btn_bg"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:textSize="14sp"
            android:text="学习考试"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/sy_btn_background"

        android:id="@+id/ll_xxcx"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/xxcx"
            android:background="@drawable/sy_btn_bg"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:textSize="14sp"
            android:text="信息查询"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/sy_btn_background"
        android:padding="10dp"
        android:id="@+id/ll_hdjl"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/grid_menu_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/hdjl"
            android:background="@drawable/sy_btn_bg"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:textSize="14sp"
            android:text="互动交流"/>

    </LinearLayout>

</LinearLayout>
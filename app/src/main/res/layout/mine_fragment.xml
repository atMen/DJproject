<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/djtitleinfo"/>

            <RelativeLayout
                android:background="@drawable/bg_rl_mine"
                android:id="@+id/msg"
                android:padding="@dimen/dimen_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的信息"
                    android:drawableLeft="@drawable/minexx"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_more"
                    />
            </RelativeLayout>



            <RelativeLayout
                android:background="@drawable/bg_rl_mine"
                android:id="@+id/rl_about"
                android:padding="@dimen/dimen_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的任务"
                    android:drawableLeft="@drawable/minerw"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_more"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rl_mine"
                android:id="@+id/rl_zx"
                android:padding="@dimen/dimen_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的课程"
                    android:drawableLeft="@drawable/minekc"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_more"
                    />
            </RelativeLayout>

            <!--<View-->
                <!--android:background="@color/gary_line"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"/>-->
            <RelativeLayout
                android:background="@drawable/bg_rl_mine"
                android:id="@+id/rl_zxgx"
                android:padding="@dimen/dimen_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的考试"
                    android:drawableLeft="@drawable/mineks"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_more"
                    />
            </RelativeLayout>



            <RelativeLayout
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rl_mine"
                android:id="@+id/rl_hd"
                android:padding="@dimen/dimen_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的活动"
                    android:drawableLeft="@drawable/minehd"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_more"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_rl_mine"
                android:id="@+id/rl_cn"
                android:padding="@dimen/dimen_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的承诺"
                    android:drawableLeft="@drawable/minecn"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_more"
                    />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
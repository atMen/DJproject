<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/djtitleinfo"/>

            <RelativeLayout
                android:background="@drawable/bg_rl_mine"
                android:id="@+id/modify_psw"
                android:padding="@dimen/dimen_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                    android:drawableLeft="@drawable/minexgmm"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_more"
                    />
            </RelativeLayout>



            <RelativeLayout
                android:background="@drawable/bg_rl_mine"
                android:id="@+id/rl_about"
                android:padding="@dimen/dimen_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:drawableLeft="@drawable/settingtcdl"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_more"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_rl_mine"
                android:id="@+id/rl_updata"
                android:padding="@dimen/dimen_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查新版本"
                    android:drawableLeft="@drawable/settingbbgx"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_more"
                    />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
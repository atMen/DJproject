<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:orientation="horizontal">

    <LinearLayout
        android:background="@drawable/sy_btn_background"
        android:padding="10dp"
        android:id="@+id/ll_xxfb"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/xxfb"
            android:background="@drawable/sy_btn_bg"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:textSize="14sp"
            android:text="信息发布"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/sy_btn_background"

        android:id="@+id/ll_dwgl"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/dwgl"
            android:background="@drawable/sy_btn_bg"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:textSize="14sp"
            android:text="党务管理"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/sy_btn_background"
        android:id="@+id/ll_dkgl"

        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/grid_menu_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/dkgl"
            android:background="@drawable/sy_btn_bg"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:textSize="14sp"
            android:text="党课管理"/>

    </LinearLayout>

</LinearLayout>